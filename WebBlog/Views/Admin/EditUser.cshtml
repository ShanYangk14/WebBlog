@model WebBlog.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

@using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
{
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" name="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" name="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class "form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" name="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
}