@model IEnumerable<WebBlog.Models.User>

@{
    ViewData["Title"] = "BlogInspect";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .user-blog {
        margin-bottom: 50px;
    }

    .user-name {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        color: darkblue;
    }

    .blog-list {
        list-style-type: none;
        padding-left: 0;
    }

        .blog-list li {
            margin-bottom: 15px;
        }

            .blog-list li a {
                color: #007bff;
                text-decoration: none;
                font-size: 18px;
                display: block;
                padding: 10px;
                border-bottom: 1px solid #ddd;
            }

                .blog-list li a:hover {
                    background-color: #f5f5f5;
                }

    .blog-search-box {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

        .blog-search-box input[type="text"] {
            width: 60%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ced4da;
            border-radius: 5px 0 0 5px;
            background-color: #f5f5f5;
        }

    .search-button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: greenyellow;
        color: white;
        border: none;
        border-radius: 0 5px 5px 0;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: forestgreen;
        }
</style>

<div class="container">
    <h1>Global Blog Posts</h1>

    <div class="blog-search-box">
        <form asp-action="BlogInspect" method="get">
            <input type="text" name="searchQuery" placeholder="Search blogs...">
            <button type="submit" class="search-button">Search</button>
        </form>
    </div>

    @foreach (var user in Model)
    {
        <div class="user-blog">
            <div class="user-name">@user.FirstName @user.LastName's Blog</div>
            <ul class="blog-list">
                @foreach (var post in user.BlogPosts)
                {
                    <li>
                        <a href="@Url.Action("ViewBlogPost", "User", new { postId = post.Id })">@post.Title</a>
                    </li>
                }
            </ul>
        </div>
    }
</div>
