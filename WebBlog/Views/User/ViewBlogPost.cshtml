@model WebBlog.Models.BlogPost
@{
    ViewData["Title"] = "View Blog Post";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    .container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
    }

    .blog-post {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 30px;
    }

    header h1 {
        font-size: 28px;
        color: #333;
        margin-bottom: 10px;
        margin-top: 0;
    }

    .author-info {
        margin-bottom: 20px;
    }

    .author-name {
        font-size: 16px;
        font-weight: bold;
        color: #666;
    }

    .author-email {
        font-size: 14px;
        color: #888;
    }

    .blog-post-content img {
        max-width: 100%;
        max-height: 300px; 
        height: auto;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .comments-title {
        font-size: 24px;
        color: #333;
        margin-top: 30px;
        margin-bottom: 10px;
    }

    .comments-list {
        list-style-type: none;
        padding: 0;
        margin: 0 0 30px;
    }

    .comment-content {
        font-size: 16px;
        color: #444;
        margin-bottom: 5px;
    }

    .delete-comment-btn {
        font-size: 14px;
        color: #fff;
        background-color: #dc3545;
        border: none;
        border-radius: 4px;
        padding: 6px 12px;
        cursor: pointer;
    }

        .delete-comment-btn:hover {
            background-color: #c82333;
        }

    .no-comments {
        font-size: 16px;
        color: #888;
    }

    .add-comment-title {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
        margin-top: 0;
    }

    .add-comment-form {
        margin-bottom: 30px;
    }

    .submit-comment-btn {
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
    }

        .submit-comment-btn:hover {
            background-color: #0056b3;
        }
</style>

<div class="container">
    <div class="blog-post">
        <header>
            <h1>@Model.Title</h1>
            @if (ViewData.ContainsKey("UserNotFound") && (bool)ViewData["UserNotFound"])
            {
                <p>User information not available.</p>
            }
            else
            {
                <div class="author-info">
                    <p class="author-name">By: @ViewData["UserFirstName"] @ViewData["UserLastName"]</p>
                    <p class="author-email">Email: @ViewData["UserEmail"]</p>
                </div>
            }
        </header>

        <section class="blog-post-content">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Url.Content(Model.ImagePath)" alt="Post Image" />
            }
            <p>@Model.Content</p>
        </section>

        <section class="comments">
            <h2 class="comments-title">Comments</h2>
            @if (Model.Comments.Any())
            {
                <ul class="comments-list">
                    @foreach (var comment in Model.Comments)
                    {
                        <li class="comment">
                            <p class="comment-content">@comment.Content - @comment.CreatedAt</p>
                            @if (comment.User != null && User.Identity.IsAuthenticated && User.Identity.Name == comment.User.Email)
                            {
                                <form asp-action="DeleteComment" method="post" class="delete-comment-form">
                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                    <button type="submit" class="delete-comment-btn">Delete</button>
                                </form>
                            }
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="no-comments">No comments yet.</p>
            }

            <hr />

            <div class="add-comment-section">
                <h3 class="add-comment-title">Add Comment</h3>
                <form asp-action="AddComment" method="post" class="add-comment-form">
                    <input type="hidden" name="postId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="content">Content:</label>
                        <textarea class="form-control" id="content" name="content" rows="3"></textarea>
                    </div>
                    <button type="submit" class="submit-comment-btn">Submit</button>
                </form>
            </div>
        </section>
    </div>
</div>
